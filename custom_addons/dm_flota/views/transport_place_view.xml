<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="dm_f_transport_place_view_tree" model="ir.ui.view">
        <field name="name">dm.f.transport.place.view.tree</field>
        <field name="model">transport.place</field>
        <field name="arch" type="xml">
            <tree string="Places">
                <field name="name"/>
                <field name="street"/>
                <field name="city"/>
                <field name="partner_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="dm_f_transport_place_view_form" model="ir.ui.view">
        <field name="name">>dm.f.transport.place.view.form</field>
        <field name="model">transport.place</field>
        <field name="arch" type="xml">
            <form string="Places">
                    <group>
                        <group id="header_left_group">

                            <div class="o_td_label">
                                <label for="name"/>
                            </div>

                            <field name="name" nolabel="1"/>

                            <div class="o_td_label">
                                <label for="partner_id"/>
                            </div>

                            <field name="partner_id" nolabel="1"/>

                        </group>

                        <group id="header_right_group">

                            <div class="o_td_label">
                                <label for="street" style="font-weight:bold;"/>
                            </div>
                            <field name="street" nolabel="1"/>

                             <div class="o_td_label">
                                <label for="street2" style="font-weight:bold;"/>
                            </div>
                            <field name="street2" nolabel="1"/>

                             <div class="o_td_label">
                                <label for="city" style="font-weight:bold;"/>
                            </div>
                            <field name="city" nolabel="1"/>

                            <div class="o_td_label">
                                <label for="zip" style="font-weight:bold;"/>
                            </div>
                            <field name="zip" nolabel="1"/>

                            <div class="o_td_label">
                                <label for="country_id" style="font-weight:bold;"/>
                            </div>
                            <field name="country_id" nolabel="1"/>

                        </group>
                    </group>
            </form>
        </field>
    </record>


    <record id="dm_f_transport_place_view_action" model="ir.actions.act_window">
        <field name="name">Places</field>
        <field name="res_model">transport.place</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="dm_f_transport_place_view_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a transport place
            </p><p>
            Create transport place and keep an eye all the time.
        </p>
        </field>
    </record>

    <menuitem action="dm_f_transport_place_view_action" parent="fleet_transport" id="fleet_transport_places" sequence="200"/>

</odoo>